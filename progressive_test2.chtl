use html5;

html
{
    body
    {
        div
        {
            id: container;
            class: main-content;

            style
            {
                .main-content
                {
                    width: 100%;
                    max-width: 800px;
                    margin: 0 auto;
                    padding: 20px;
                    font-family: Arial, sans-serif;
                }

                &:hover
                {
                    background-color: #f5f5f5;
                }
            }
        }
    }
}