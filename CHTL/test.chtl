// CHTL测试文件
html {
    head {
        title : "CHTL测试页面"
        
        style {
            body {
                margin: 0;
                padding: 20px;
                font-family: Arial, sans-serif;
            }
            
            .container {
                max-width: 800px;
                margin: 0 auto;
            }
            
            h1 {
                color: #333;
            }
        }
    }
    
    body {
        div.container {
            h1 : "欢迎使用CHTL!"
            
            p : "这是一个基于C++的超文本语言。"
            
            button#myButton : "点击我" {
                style {
                    padding: 10px 20px;
                    background-color: #007bff;
                    color: white;
                    border: none;
                    border-radius: 4px;
                    cursor: pointer;
                }
                
                script {
                    {{#myButton}}->addEventListener('click', function() {
                        alert('你点击了按钮！');
                    });
                }
            }
        }
    }
}