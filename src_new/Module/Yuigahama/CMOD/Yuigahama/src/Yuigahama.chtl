[Origin] @Style YuigahamaReset
{
    /* ç”±æ¯”æ»¨é£æ ¼çš„CSSé‡ç½® */
    *, *::before, *::after {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
    }
    
    html {
        scroll-behavior: smooth;
        font-size: 16px;
    }
    
    body {
        font-family: 'Noto Sans SC', 'Hiragino Sans GB', sans-serif;
        line-height: 1.6;
        color: #424242;
        background: linear-gradient(135deg, #fff3e0 0%, #ffcdd2 100%);
        min-height: 100vh;
    }
    
    img {
        max-width: 100%;
        height: auto;
        border-radius: 0.75rem;
    }
    
    button {
        font-family: inherit;
        outline: none;
    }
    
    a {
        color: inherit;
        text-decoration: none;
    }
    
    /* ç”±æ¯”æ»¨ä¸“ç”¨æ»šåŠ¨æ¡ */
    ::-webkit-scrollbar {
        width: 10px;
        height: 10px;
    }
    
