[Origin] @Style YuigahamaReset
{
    /* 由比滨风格的CSS重置 */
    *, *::before, *::after {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
    }
    
    html {
        scroll-behavior: smooth;
        font-size: 16px;
    }
    
    body {
        font-family: 'Noto Sans SC', 'Hiragino Sans GB', sans-serif;
        line-height: 1.6;
        color: #424242;
        background: linear-gradient(135deg, #fff3e0 0%, #ffcdd2 100%);
        min-height: 100vh;
    }
    
    img {
        max-width: 100%;
        height: auto;
        border-radius: 0.75rem;
    }
    
    button {
        font-family: inherit;
        outline: none;
    }
    
    a {
        color: inherit;
        text-decoration: none;
    }
    
    /* 由比滨专用滚动条 */
    ::-webkit-scrollbar {
        width: 10px;
        height: 10px;
    }
    
    ::-webkit-scrollbar-track {
        background: #fff3e0;
        border-radius: 5px;
    }
    
    ::-webkit-scrollbar-thumb {
        background: linear-gradient(135deg, #ff9800, #ffcc80);
        border-radius: 5px;
    }
    
    ::-webkit-scrollbar-thumb:hover {
        background: linear-gradient(135deg, #f57c00, #ffb74d);
    }
    
    /* 由比滨的选择文本样式 */
    ::selection {
        background: rgba(255, 152, 0, 0.3);
        color: #424242;
    }
    
    ::-moz-selection {
        background: rgba(255, 152, 0, 0.3);
        color: #424242;
    }
}