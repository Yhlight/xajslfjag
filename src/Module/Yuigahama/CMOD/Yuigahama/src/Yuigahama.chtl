// Yuigahama主模块 - 由比滨结衣
// 温柔善良的女孩，橘色头发，充满活力
// 善解人意，乐于助人，拥有治愈系的笑容

[Configuration] @Config YuigahamaTheme
{
    INDEX_INITIAL_COUNT = 1;
    DISABLE_STYLE_AUTO_ADD_CLASS = false;
    DISABLE_STYLE_AUTO_ADD_ID = false;
    DEBUG_MODE = false;
    
    [Name]
    {
        // 由比滨专用关键字别名
        yui = "yuigahama";
        gentle = "kind";
        warm = "cozy";
        friend = "companion";
        music = "melody";
    }
    
    [OriginType]
    {
        ORIGINTYPE_MUSIC = @Music;
        ORIGINTYPE_FRIENDSHIP = @Friendship;
        ORIGINTYPE_WARMTH = @Warmth;
    }
}

[Template] @Var YuigahamaColors
{
    // 由比滨的标志性颜色 - 橘色头发和温暖色调
    primary: "#ff9800";        // 由比滨的橘色
    secondary: "#ffcc80";      // 温暖的浅橘色
    accent: "#ff5722";         // 活力的橙红色
    
    // 情感色彩
    warmth: "#ffab91";         // 温暖橘色
    kindness: "#ffcdd2";       // 善良粉色
    friendship: "#fff3e0";     // 友谊暖色
    energy: "#ffeb3b";         // 活力黄色
    
    // 自然色彩
    sunlight: "#fff59d";       // 阳光色
    peach: "#ffccbc";          // 桃色
    cream: "#fff8e1";          // 奶油色
    coral: "#ff8a65";          // 珊瑚色
    
    // 背景色彩
    lightOrange: "#fff3e0";    // 浅橘色背景
    warmWhite: "#fffde7";      // 温暖白色
    softPink: "#fce4ec";       // 柔和粉色
    gentleYellow: "#fffde7";   // 温柔黄色
    
    // 中性色
    white: "#ffffff";
    black: "#424242";
    gray100: "#fafafa";
    gray200: "#eeeeee";
    gray300: "#e0e0e0";
    gray400: "#bdbdbd";
    gray500: "#9e9e9e";
    gray600: "#757575";
    gray700: "#616161";
    gray800: "#424242";
    gray900: "#212121";
}

[Template] @Var YuigahamaTypography
{
    // 由比滨风格字体 - 友善易读
    primaryFont: "'Noto Sans SC', 'Hiragino Sans GB', sans-serif";
    titleFont: "'Noto Sans SC', 'Microsoft YaHei UI', sans-serif";
    codeFont: "'Source Code Pro', 'Consolas', monospace";
    
    // 字体大小 - 友善的比例
    xs: "0.75rem";     // 12px
    sm: "0.875rem";    // 14px
    base: "1rem";      // 16px
    lg: "1.125rem";    // 18px
    xl: "1.25rem";     // 20px
    "2xl": "1.5rem";   // 24px
    "3xl": "1.875rem"; // 30px
    "4xl": "2.25rem";  // 36px
    
    // 字重
    light: "300";
    normal: "400";
    medium: "500";
    semibold: "600";
    bold: "700";
    
    // 行高
    tight: "1.3";
    normal: "1.6";
    relaxed: "1.8";
    loose: "2.0";
}

[Template] @Var YuigahamaSpacing
{
    // 由比滨风格间距 - 舒适的距离
    xs: "0.25rem";    // 4px
    sm: "0.5rem";     // 8px
    md: "1rem";       // 16px
    lg: "1.5rem";     // 24px
    xl: "2rem";       // 32px
    "2xl": "3rem";    // 48px
    "3xl": "4rem";    // 64px
}

[Template] @Var YuigahamaAnimations
{
    // 由比滨风格动画 - 温和的节奏
    instant: "0ms";
    quick: "200ms";
    normal: "400ms";
    slow: "600ms";
    gentle: "800ms";
    
    // 缓动函数
    easeIn: "cubic-bezier(0.25, 0.1, 0.25, 1)";
    easeOut: "cubic-bezier(0, 0, 0.1, 1)";
    easeInOut: "cubic-bezier(0.25, 0.1, 0.1, 1)";
    bounce: "cubic-bezier(0.34, 1.56, 0.64, 1)";
    spring: "cubic-bezier(0.175, 0.885, 0.32, 1.275)";
}

[Template] @Var YuigahamaEffects
{
    // 阴影效果 - 温暖的光影
    shadowSoft: "0 2px 8px rgba(255, 152, 0, 0.1)";
    shadowMedium: "0 4px 16px rgba(255, 152, 0, 0.15)";
    shadowLarge: "0 8px 32px rgba(255, 152, 0, 0.2)";
    shadowWarm: "0 0 20px rgba(255, 204, 128, 0.3)";
    
    // 渐变效果
    gradientPrimary: "linear-gradient(135deg, #ff9800, #ffcc80)";
    gradientWarm: "linear-gradient(135deg, #ffab91, #fff3e0)";
    gradientSunset: "linear-gradient(135deg, #ff8a65, #fff59d)";
    gradientFriendship: "linear-gradient(135deg, #ffcdd2, #fff3e0)";
    
    // 边框半径
    radiusSmall: "0.375rem";
    radiusMedium: "0.75rem";
    radiusLarge: "1.25rem";
    radiusRound: "50%";
    
    // 透明度
    transparent: "transparent";
    semiTransparent: "rgba(255, 255, 255, 0.9)";
    overlay: "rgba(66, 66, 66, 0.5)";
}

[Template] @Style YuigahamaBaseStyle
{
    // 由比滨基础样式
    font-family: YuigahamaTypography(primaryFont);
    font-size: YuigahamaTypography(base);
    line-height: YuigahamaTypography(normal);
    color: YuigahamaColors(black);
    transition: "all" YuigahamaAnimations(normal) YuigahamaAnimations(easeInOut);
}

[Custom] @Style YuigahamaCard from YuigahamaBaseStyle
{
    background: YuigahamaColors(warmWhite);
    border: "1px solid" YuigahamaColors(gray200);
    border-radius: YuigahamaEffects(radiusMedium);
    padding: YuigahamaSpacing(lg);
    box-shadow: YuigahamaEffects(shadowSoft);
    position: "relative";
    
    // 由比滨风格的温暖光效
    &::before
    {
        content: "''";
        position: "absolute";
        top: "0";
        left: "0";
        right: "0";
        height: "3px";
        background: YuigahamaEffects(gradientPrimary);
        border-radius: YuigahamaEffects(radiusMedium) YuigahamaEffects(radiusMedium) "0 0";
    }
    
    &:hover
    {
        transform: "translateY(-2px)";
        box-shadow: YuigahamaEffects(shadowMedium);
    }
}

[Custom] @Style YuigahamaButton from YuigahamaBaseStyle
{
    display: "inline-flex";
    align-items: "center";
    justify-content: "center";
    padding: YuigahamaSpacing(sm) YuigahamaSpacing(lg);
    background: YuigahamaEffects(gradientPrimary);
    color: YuigahamaColors(white);
    border: "none";
    border-radius: YuigahamaEffects(radiusMedium);
    font-weight: YuigahamaTypography(medium);
    cursor: "pointer";
    position: "relative";
    
    // 由比滨的温暖波纹效果
    &::after
    {
        content: "''";
        position: "absolute";
        top: "50%";
        left: "50%";
        width: "0";
        height: "0";
        background: "rgba(255, 255, 255, 0.3)";
        border-radius: YuigahamaEffects(radiusRound);
        transform: "translate(-50%, -50%)";
        transition: "all" YuigahamaAnimations(normal) YuigahamaAnimations(easeOut);
    }
    
    &:hover
    {
        background: YuigahamaEffects(gradientWarm);
        transform: "translateY(-1px)";
        box-shadow: YuigahamaEffects(shadowWarm);
    }
    
    &:active::after
    {
        width: "200%";
        height: "200%";
        opacity: "0";
    }
}

[Custom] @Style YuigahaMusicPlayer from YuigahamaCard
{
    // 音乐播放器样式
    background: YuigahamaEffects(gradientFriendship);
    text-align: "center";
    
    .player-cover
    {
        width: "200px";
        height: "200px";
        margin: "0 auto" YuigahamaSpacing(lg);
        border-radius: YuigahamaEffects(radiusLarge);
        overflow: "hidden";
        box-shadow: YuigahamaEffects(shadowMedium);
        position: "relative";
    }
    
    .player-cover img
    {
        width: "100%";
        height: "100%";
        object-fit: "cover";
        transition: "transform" YuigahamaAnimations(gentle) YuigahamaAnimations(easeInOut);
    }
    
    .player-cover.playing img
    {
        transform: "scale(1.05)";
        animation: "yuigahamaRotate 10s linear infinite";
    }
    
    @keyframes yuigahamaRotate
    {
        from { transform: "rotate(0deg) scale(1.05)"; }
        to { transform: "rotate(360deg) scale(1.05)"; }
    }
    
    .player-info
    {
        margin-bottom: YuigahamaSpacing(lg);
    }
    
    .player-title
    {
        font-size: YuigahamaTypography(xl);
        font-weight: YuigahamaTypography(semibold);
        color: YuigahamaColors(black);
        margin-bottom: YuigahamaSpacing(xs);
    }
    
    .player-artist
    {
        font-size: YuigahamaTypography(sm);
        color: YuigahamaColors(gray600);
    }
    
    .player-controls
    {
        display: "flex";
        justify-content: "center";
        align-items: "center";
        gap: YuigahamaSpacing(md);
        margin-bottom: YuigahamaSpacing(lg);
    }
    
    .player-btn
    {
        width: "48px";
        height: "48px";
        border-radius: YuigahamaEffects(radiusRound);
        background: YuigahamaColors(white);
        border: "2px solid" YuigahamaColors(primary);
        color: YuigahamaColors(primary);
        cursor: "pointer";
        display: "flex";
        align-items: "center";
        justify-content: "center";
        font-size: YuigahamaTypography(lg);
        transition: "all" YuigahamaAnimations(normal) YuigahamaAnimations(easeInOut);
    }
    
    .player-btn:hover
    {
        background: YuigahamaColors(primary);
        color: YuigahamaColors(white);
        transform: "scale(1.1)";
    }
    
    .player-btn.play
    {
        width: "56px";
        height: "56px";
        font-size: YuigahamaTypography(xl);
    }
    
    .player-progress
    {
        width: "100%";
        height: "6px";
        background: YuigahamaColors(gray200);
        border-radius: YuigahamaEffects(radiusSmall);
        overflow: "hidden";
        cursor: "pointer";
    }
    
    .player-progress-bar
    {
        height: "100%";
        background: YuigahamaEffects(gradientPrimary);
        border-radius: YuigahamaEffects(radiusSmall);
        transition: "width" YuigahamaAnimations(quick) YuigahamaAnimations(easeOut);
    }
    
    .player-time
    {
        display: "flex";
        justify-content: "space-between";
        margin-top: YuigahamaSpacing(sm);
        font-size: YuigahamaTypography(xs);
        color: YuigahamaColors(gray600);
    }
}

[Custom] @Style YuigahamaMouseEffect from YuigahamaBaseStyle
{
    // 鼠标特效样式
    .mouse-trail
    {
        position: "fixed";
        width: "10px";
        height: "10px";
        background: YuigahamaColors(primary);
        border-radius: YuigahamaEffects(radiusRound);
        pointer-events: "none";
        z-index: "9999";
        opacity: "0.8";
        transform: "scale(0)";
        animation: "yuigahamaTrail 0.6s ease-out forwards";
    }
    
    @keyframes yuigahamaTrail
    {
        0% {
            transform: "scale(0)";
            opacity: "0.8";
        }
        50% {
            transform: "scale(1.2)";
            opacity: "0.6";
        }
        100% {
            transform: "scale(0.8)";
            opacity: "0";
        }
    }
    
    .mouse-click-effect
    {
        position: "fixed";
        width: "20px";
        height: "20px";
        border: "2px solid" YuigahamaColors(primary);
        border-radius: YuigahamaEffects(radiusRound);
        pointer-events: "none";
        z-index: "9999";
        animation: "yuigahamaClick 0.4s ease-out forwards";
    }
    
    @keyframes yuigahamaClick
    {
        0% {
            transform: "scale(0.5)";
            opacity: "1";
        }
        100% {
            transform: "scale(2)";
            opacity: "0";
        }
    }
}

[Template] @Element YuigahamaContainer
{
    div
    {
        class: "yuigahama-container";
        
        style
        {
            @Style YuigahamaBaseStyle;
            
            .yuigahama-container
            {
                max-width: "1200px";
                margin: "0 auto";
                padding: "0" YuigahamaSpacing(lg);
                position: "relative";
                background: YuigahamaEffects(gradientFriendship);
                min-height: "100vh";
            }
            
            // 由比滨的温暖背景粒子
            .yuigahama-container::before
            {
                content: "''";
                position: "absolute";
                top: "0";
                left: "0";
                right: "0";
                bottom: "0";
                background-image: "radial-gradient(circle at 20% 30%, rgba(255, 152, 0, 0.1) 0%, transparent 50%), radial-gradient(circle at 80% 70%, rgba(255, 204, 128, 0.1) 0%, transparent 50%), radial-gradient(circle at 50% 50%, rgba(255, 171, 145, 0.05) 0%, transparent 50%)";
                animation: "yuigahamaWarmth 15s ease-in-out infinite alternate";
                pointer-events: "none";
                z-index: "-1";
            }
            
            @keyframes yuigahamaWarmth
            {
                0% { opacity: "0.3"; transform: "scale(1)"; }
                100% { opacity: "0.6"; transform: "scale(1.1)"; }
            }
        }
    }
}

