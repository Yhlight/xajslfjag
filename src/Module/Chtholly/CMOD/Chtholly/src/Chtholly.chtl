[Origin] @Style ChthollyReset
{
    /* ç‚æœµè‰é£æ ¼çš„CSSé‡ç½® */
    *, *::before, *::after {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
    }
    
    html {
        scroll-behavior: smooth;
        font-size: 16px;
    }
    
    body {
        font-family: 'Noto Sans SC', 'Microsoft YaHei', sans-serif;
        line-height: 1.6;
        color: #2c3e50;
        background: linear-gradient(135deg, #f8f8ff 0%, #e8f5e8 100%);
        min-height: 100vh;
    }
    
    img {
        max-width: 100%;
        height: auto;
        border-radius: 0.5rem;
    }
    
    button {
        font-family: inherit;
    }
    
    a {
        color: inherit;
        text-decoration: none;
    }
    
    /* ç‚æœµè‰ä¸“ç”¨æ»šåŠ¨æ¡ */
    ::-webkit-scrollbar {
        width: 8px;
        height: 8px;
    }
    
    ::-webkit-scrollbar-track {
        background: #f8f8ff;
        border-radius: 4px;
    }
    
    ::-webkit-scrollbar-thumb {
        background: linear-gradient(135deg, #e74c3c, #3498db);
        border-radius: 4px;
    }
    
    ::-webkit-scrollbar-thumb:hover {
        background: linear-gradient(135deg, #c0392b, #2980b9);
    }
}