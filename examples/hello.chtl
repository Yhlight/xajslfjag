[Template] @Style GlobalStyle {
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }
    
    body {
        font-family: Arial, sans-serif;
        line-height: 1.6;
        color: #333;
        background-color: #f4f4f4;
    }
    
    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 20px;
    }
}

/* ÂÆö‰πâÂ§¥ÈÉ®ÁªÑ‰ª∂ */
[Template] @Element SiteHeader {
    header.site-header {
        background: #333;
        color: white;
        padding: 1rem 0;
        
        h1: "CHTL Demo Site"
        
        nav {
            ul {
                list-style: none;
                display: flex;
                gap: 20px;
                
                li {
                    a[href="#home"]: "Home"
                }
                li {
                    a[href="#features"]: "Features"
                }
                li {
                    a[href="#about"]: "About"
                }
            }
        }
    }
    
    [Style] {
        & {
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
        }
        
        h1 {
            margin-bottom: 10px;
        }
        
        a {
            color: white;
            text-decoration: none;
            &:hover {
                text-decoration: underline;
            }
        }
    }
}

// ÂÆö‰πâÁâπÊÄßÂç°ÁâáÁªÑ‰ª∂
[Template] @Element FeatureCard {
    @Var title
    @Var description
    @Var icon
    
    div.feature-card {
        div.icon: @icon
        h3: @title
        p: @description
    }
    
    [Style] {
        & {
            background: white;
            padding: 30px;
            border-radius: 8px;
            text-align: center;
            transition: transform 0.3s;
            
            &:hover {
                transform: translateY(-5px);
                box-shadow: 0 5px 15px rgba(0,0,0,0.1);
            }
        }
        
        .icon {
            font-size: 48px;
            margin-bottom: 20px;
            color: #333;
        }
        
        h3 {
            margin-bottom: 15px;
            color: #333;
        }
    }
}

